<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- This is how your main page will look, just 2 buttons -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp" >


        <RelativeLayout
            android:id="@+id/header_layout"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="#d4ebf2"
            >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:id="@+id/btn_menu"
                android:background="#d4ebf2"
                android:src="@mipmap/ic_menu"
                android:onClick="opendraw"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Processing"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:id="@+id/textView"
                android:textStyle="bold"/>

            <ImageButton
                android:id="@+id/btn_search"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="#d4ebf2"
                android:src="@mipmap/ic_search"
                android:onClick="search_view"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/log"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header_layout"
            android:text="Loading, Please wait"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#800000"
            android:background="#ffcece"/>

        <android.support.v4.widget.SwipeRefreshLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/swipeContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/header_layout">


            <ListView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ListView>

        </android.support.v4.widget.SwipeRefreshLayout>
    </RelativeLayout>






    <!-- Student Drawrer -->

    <RelativeLayout
        android:id="@+id/Drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#abd1fd"
        android:clickable="true"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:id="@+id/btns">
            <ImageView
                android:id="@+id/Logo"
                android:layout_width="fill_parent"
                android:layout_height="160dp"
                android:background="#157efb"
                android:src="@mipmap/ic_launcher"/>
            <TextView
                android:id="@+id/user"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#157efb"/>
            <Button
                android:id="@+id/btn_profile"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="#2e8cfb"
                android:textColor="#000000"
                android:text="Profile"
                android:drawableLeft="@mipmap/ic_profile"
                android:paddingLeft="30dp"
                android:drawablePadding="-70dp"
                />
            <Button
                android:id="@+id/btn_history"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="#479afb"
                android:textColor="#000000"
                android:text="Qst History"
                android:drawableLeft="@mipmap/ic_correct"
                android:paddingLeft="30dp"
                android:drawablePadding="-70dp"
                />
            <Button
                android:id="@+id/btn_QA"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="#60a8fc"
                android:textColor="#000000"
                android:text="Ask a Qst"
                android:drawableLeft="@mipmap/ic_question"
                android:paddingLeft="30dp"
                android:drawablePadding="-70dp"
                />
            <Button
                android:id="@+id/btn_switch"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="#79b6fc"
                android:textColor="#000000"
                android:text="Switch To Tutor"
                android:drawableLeft="@mipmap/ic_tutor"
                android:paddingLeft="30dp"
                android:drawablePadding="-60dp"
                />
        </LinearLayout>

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>