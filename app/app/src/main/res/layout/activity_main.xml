<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- This is how your main page will look, just 2 buttons -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp" >


        <RelativeLayout
            android:id="@+id/header_layout"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="#d4ebf2"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:id="@+id/btn_menu"
                android:text="@string/Menu"
                android:background="#157efb"
                android:textColor="#ffffff"
                android:onClick="opendraw"/>


            <Button
                android:id="@+id/btn_other"
                android:layout_width="55dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:text="OOO"
                android:background="#157efb"
                android:textColor="#ffffff" />
        </RelativeLayout>
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:id="@+id/scroll"
            android:layout_below="@id/header_layout">
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Processing"
            android:id="@+id/textView"/>
        </ScrollView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/scroll">
                <ListView
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </ListView>
        </LinearLayout>
    </RelativeLayout>






    <!-- Student Drawrer -->

    <RelativeLayout
        android:id="@+id/Drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#abd1fd"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/Logo"
                android:layout_width="fill_parent"
                android:layout_height="160dp"
                android:background="#157efb"
                android:src="@mipmap/ic_launcher"/>
            <Button
                android:id="@+id/btn_profile"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="#2e8cfb"
                android:textColor="#ffffff"
                android:text="Profile"
                android:drawableLeft="@mipmap/ic_profile"
                android:paddingLeft="30dp"
                android:drawablePadding="-70dp"
                />
            <Button
                android:id="@+id/btn_history"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="#479afb"
                android:textColor="#ffffff"
                android:text="Qst History"
                android:drawableLeft="@mipmap/ic_correct"
                android:paddingLeft="30dp"
                android:drawablePadding="-70dp"
                />
            <Button
                android:id="@+id/btn_QA"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="#60a8fc"
                android:textColor="#ffffff"
                android:text="Ask a Qst"
                android:drawableLeft="@mipmap/ic_question"
                android:paddingLeft="30dp"
                android:drawablePadding="-70dp"
                />
            <Button
                android:id="@+id/btn_switch"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="#79b6fc"
                android:textColor="#ffffff"
                android:text="Switch To Tutor"
                android:drawableLeft="@mipmap/ic_tutor"
                android:paddingLeft="30dp"
                android:drawablePadding="-60dp"
                />
        </LinearLayout>
    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>